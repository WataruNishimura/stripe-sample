{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "amd": true
  },
  "plugins": [
    "html"
  ],
  "ignorePatterns": "./dist/assets/bundle.js",
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": true
      }
    ]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2018
  }
}